{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "Forecast",
    "tags": ["pv", "forecast", "solar"],
    "timezone": "browser",
    "schemaVersion": 39,
    "refresh": "5m",
    "time": {
      "from": "now-6h",
      "to": "now+24h"
    },
    "panels": [
      {
        "id": 1,
        "title": "PV Power Forecast (P10/P50/P90)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
        "datasource": { "type": "influxdb", "uid": "${DS_INFLUXDB}" },
        "fieldConfig": {
          "defaults": {
            "unit": "watt",
            "custom": {
              "fillOpacity": 10,
              "lineWidth": 2
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "power_w_p10" },
              "properties": [
                { "id": "displayName", "value": "P10 (Low)" },
                { "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }
              ]
            },
            {
              "matcher": { "id": "byName", "options": "power_w_p50" },
              "properties": [
                { "id": "displayName", "value": "P50 (Expected)" },
                { "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } },
                { "id": "custom.lineWidth", "value": 3 }
              ]
            },
            {
              "matcher": { "id": "byName", "options": "power_w_p90" },
              "properties": [
                { "id": "displayName", "value": "P90 (High)" },
                { "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }
              ]
            }
          ]
        },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"pv_forecast\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"pv_forecast\")\n  |> filter(fn: (r) => r._field == \"power_w_p10\" or r._field == \"power_w_p50\" or r._field == \"power_w_p90\")"
          }
        ]
      },
      {
        "id": 2,
        "title": "Net Power (PV - Load)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 6 },
        "datasource": { "type": "influxdb", "uid": "${DS_INFLUXDB}" },
        "description": "Positive = surplus (PV > Load), Negative = deficit (PV < Load)",
        "fieldConfig": {
          "defaults": {
            "unit": "watt",
            "custom": {
              "fillOpacity": 20,
              "lineWidth": 2,
              "gradientMode": "scheme",
              "thresholdsStyle": { "mode": "area" }
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 0 },
                { "color": "green", "value": 500 }
              ]
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Net P50" },
              "properties": [
                { "id": "color", "value": { "fixedColor": "#5794F2", "mode": "fixed" } },
                { "id": "custom.lineWidth", "value": 3 }
              ]
            }
          ]
        },
        "targets": [
          {
            "refId": "A",
            "query": "pv = from(bucket: \"pv_forecast\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"pv_forecast\" and r.inverter == \"total\")\n  |> filter(fn: (r) => r._field == \"power_w_p50\")\n\nload = from(bucket: \"load_forecast\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"load_forecast\")\n  |> filter(fn: (r) => r._field == \"power_w_p50\")\n\njoin(tables: {pv: pv, load: load}, on: [\"_time\"])\n  |> map(fn: (r) => ({_time: r._time, _value: r._value_pv - r._value_load, _field: \"Net P50\"}))\n  |> keep(columns: [\"_time\", \"_value\", \"_field\"])"
          }
        ]
      },
      {
        "id": 3,
        "title": "Cumulative Energy Balance (Wh)",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 6 },
        "datasource": { "type": "influxdb", "uid": "${DS_INFLUXDB}" },
        "description": "Running total of net energy (PV - Load). Pre-calculated by EnergyManager.",
        "fieldConfig": {
          "defaults": {
            "unit": "watth",
            "custom": {
              "fillOpacity": 5,
              "lineWidth": 2,
              "showPoints": "never"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Cumulative Wh" },
              "properties": [
                { "id": "color", "value": { "fixedColor": "#B877D9", "mode": "fixed" } },
                { "id": "custom.lineWidth", "value": 3 }
              ]
            }
          ]
        },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"energy_manager\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"energy_balance\")\n  |> filter(fn: (r) => r._field == \"cumulative_wh\")\n  |> map(fn: (r) => ({_time: r._time, _value: r._value, _field: \"Cumulative Wh\"}))\n  |> keep(columns: [\"_time\", \"_value\", \"_field\"])"
          }
        ]
      },
      {
        "id": 4,
        "title": "Weather - GHI",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 14, "w": 12, "h": 5 },
        "datasource": { "type": "influxdb", "uid": "${DS_INFLUXDB}" },
        "fieldConfig": {
          "defaults": {
            "unit": "watt/mÂ²",
            "custom": {
              "fillOpacity": 30,
              "lineWidth": 1,
              "gradientMode": "opacity"
            },
            "color": { "fixedColor": "yellow", "mode": "fixed" }
          }
        },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"pv_forecast\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"pv_forecast\")\n  |> filter(fn: (r) => r._field == \"ghi\")"
          }
        ]
      },
      {
        "id": 5,
        "title": "Weather - Temperature",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 14, "w": 12, "h": 5 },
        "datasource": { "type": "influxdb", "uid": "${DS_INFLUXDB}" },
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "custom": {
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "color": { "fixedColor": "blue", "mode": "fixed" }
          }
        },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"pv_forecast\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"pv_forecast\")\n  |> filter(fn: (r) => r._field == \"temp_air\")"
          }
        ]
      },
      {
        "id": 6,
        "title": "Load Forecast (W)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 19, "w": 12, "h": 5 },
        "datasource": { "type": "influxdb", "uid": "${DS_INFLUXDB}" },
        "fieldConfig": {
          "defaults": {
            "unit": "watt",
            "custom": {
              "fillOpacity": 30,
              "lineWidth": 2
            },
            "color": { "fixedColor": "red", "mode": "fixed" }
          }
        },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"load_forecast\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"load_forecast\")\n  |> filter(fn: (r) => r._field == \"power_w_p50\")"
          }
        ]
      },
      {
        "id": 7,
        "title": "PV Forecast Values",
        "type": "table",
        "gridPos": { "x": 12, "y": 19, "w": 12, "h": 5 },
        "datasource": { "type": "influxdb", "uid": "${DS_INFLUXDB}" },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "right"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "_time" },
              "properties": [
                { "id": "custom.width", "value": 150 }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [{ "displayName": "_time", "desc": true }]
        },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"pv_forecast\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"pv_forecast\" and r.inverter == \"total\")\n  |> pivot(rowKey:[\"_time\"], columnKey: [\"_field\"], valueColumn: \"_value\")\n  |> keep(columns: [\"_time\", \"power_w_p10\", \"power_w_p50\", \"power_w_p90\", \"ghi\", \"temp_air\"])\n  |> sort(columns: [\"_time\"], desc: true)\n  |> limit(n: 20)"
          }
        ]
      },
      {
        "id": 8,
        "title": "Today's Energy Forecast",
        "type": "stat",
        "gridPos": { "x": 0, "y": 24, "w": 8, "h": 4 },
        "datasource": { "type": "influxdb", "uid": "${DS_INFLUXDB}" },
        "fieldConfig": {
          "defaults": {
            "unit": "kWh",
            "decimals": 1,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 5 },
                { "color": "green", "value": 10 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"pv_forecast\")\n  |> range(start: today(), stop: tomorrow())\n  |> filter(fn: (r) => r._measurement == \"pv_forecast\")\n  |> filter(fn: (r) => r.inverter == \"total\")\n  |> filter(fn: (r) => r._field == \"energy_wh_p50\")\n  |> sum()\n  |> map(fn: (r) => ({r with _value: r._value / 1000.0}))"
          }
        ]
      },
      {
        "id": 9,
        "title": "Peak Power Today",
        "type": "stat",
        "gridPos": { "x": 8, "y": 24, "w": 8, "h": 4 },
        "datasource": { "type": "influxdb", "uid": "${DS_INFLUXDB}" },
        "fieldConfig": {
          "defaults": {
            "unit": "watt",
            "decimals": 0,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 1000 },
                { "color": "green", "value": 2000 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none"
        },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"pv_forecast\")\n  |> range(start: today(), stop: tomorrow())\n  |> filter(fn: (r) => r._measurement == \"pv_forecast\")\n  |> filter(fn: (r) => r._field == \"power_w_p50\")\n  |> max()"
          }
        ]
      },
      {
        "id": 10,
        "title": "Current Temperature",
        "type": "stat",
        "gridPos": { "x": 16, "y": 24, "w": 8, "h": 4 },
        "datasource": { "type": "influxdb", "uid": "${DS_INFLUXDB}" },
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "decimals": 1,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "blue", "value": null },
                { "color": "green", "value": 10 },
                { "color": "orange", "value": 25 },
                { "color": "red", "value": 35 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none"
        },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"pv_forecast\")\n  |> range(start: -1h, stop: 1h)\n  |> filter(fn: (r) => r._measurement == \"pv_forecast\")\n  |> filter(fn: (r) => r._field == \"temp_air\")\n  |> last()"
          }
        ]
      },
      {
        "id": 11,
        "title": "Battery SOC Forecast",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 28, "w": 24, "h": 8 },
        "datasource": { "type": "influxdb", "uid": "${DS_INFLUXDB}" },
        "description": "Predicted battery SOC based on current optimization decision",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "fillOpacity": 10,
              "lineWidth": 3,
              "showPoints": "never"
            },
            "color": { "fixedColor": "#73BF69", "mode": "fixed" }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "SOC %" },
              "properties": [
                { "id": "displayName", "value": "Battery SOC" }
              ]
            }
          ]
        },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"energy_manager\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"soc_forecast\")\n  |> filter(fn: (r) => r._field == \"soc_percent\")\n  |> map(fn: (r) => ({_time: r._time, _value: r._value, _field: \"SOC %\"}))\n  |> keep(columns: [\"_time\", \"_value\", \"_field\"])"
          }
        ]
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  },
  "overwrite": true
}
