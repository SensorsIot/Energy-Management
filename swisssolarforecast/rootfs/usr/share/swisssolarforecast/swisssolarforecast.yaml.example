# SwissSolarForecast Configuration
# =================================
# This file contains non-secret configuration parameters.
# Edit via File Editor or VS Code at: /addon_configs/swisssolarforecast/
#
# SECRETS (tokens) are configured in the add-on Configuration tab, NOT in this file.
#
# After editing, restart the add-on to apply changes.

# InfluxDB connection (token in Configuration tab, not here!)
influxdb:
  host: "192.168.0.203"
  port: 8087
  org: "energymanagement"
  bucket: "pv_forecast"

# Location settings
location:
  latitude: 47.475
  longitude: 7.767
  altitude: 330
  timezone: "Europe/Zurich"

# Panel definitions
panels:
  - id: "AE455"
    model: "AE Solar AC-455MH/144V"
    pdc0: 455
    gamma_pdc: -0.0035

  - id: "Generic400"
    model: "Generic 400W"
    pdc0: 400
    gamma_pdc: -0.0035

# Plant definitions with inverters and strings
plants:
  - name: "House"
    inverters:
      - name: "EastWest"
        max_power: 10000
        efficiency: 0.82
        strings:
          - name: "East"
            azimuth: 90
            tilt: 15
            panel: "AE455"
            count: 8
          - name: "West"
            azimuth: 270
            tilt: 15
            panel: "AE455"
            count: 9

      - name: "South"
        max_power: 1500
        efficiency: 0.80
        strings:
          - name: "SouthFront"
            azimuth: 180
            tilt: 70
            panel: "Generic400"
            count: 3
          - name: "SouthBack"
            azimuth: 180
            tilt: 60
            panel: "Generic400"
            count: 2

# Schedule settings (cron in UTC)
schedule:
  ch1_cron: "30 2,5,8,11,14,17,20,23 * * *"
  ch2_cron: "45 2,8,14,20 * * *"
  calculator_interval_minutes: 15

# Storage settings
storage:
  data_path: "/share/swisssolarforecast"
  max_storage_gb: 3.0
  cleanup_old_runs: true

# Logging level: debug, info, warning, error
log_level: "info"
